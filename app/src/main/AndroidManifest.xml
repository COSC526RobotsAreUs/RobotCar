<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.will.robotcar" >
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <application android:icon="@drawable/nxticon"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConnectActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".DriveActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".EditPreferences"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ResetPreferences"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity android:name=".PollActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".PopupActivity"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ConnectActivity" />
        
        <activity android:name=".DriveActivity" />

        <activity android:name=".PollActivity" />

        <activity android:name=".PopupActivity" />

        <activity android:name=".SoundsActivity" />
    </application>
</manifest>
