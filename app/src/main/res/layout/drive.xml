<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/xv_driving"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
<TableLayout
    android:layout_width="450dp"
    android:layout_height="200dp"
    android:layout_marginTop="50dp"
    android:id="@+id/tableLayout">
    <TableRow
        android:layout_marginLeft="150dp">
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/top"
            android:background="@drawable/uparrow"
            android:layout_below="@+id/textView"/>
    </TableRow>
    <TableRow
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp">
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/xv_left"
        android:background="@drawable/leftarrow"/>

    <ImageButton
        android:layout_marginLeft="50dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/xv_down"
        android:background="@drawable/downarrow"/>

    <ImageButton
        android:layout_marginLeft="50dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/xv_right"
        android:background="@drawable/rightarrow"/>
    </TableRow>
</TableLayout>

    <SeekBar
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/xv_seekBar"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tableLayout"
        android:layout_marginLeft="125dp"
        android:max="100" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/xv_power"
        android:id="@+id/xv_powertext"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/xv_seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<TableLayout
    android:layout_width="400dp"
    android:layout_height="100dp"
    android:layout_marginTop="310dp"
    android:id="@+id/tableLayout2">

    <TableRow
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/xv_MotorCUp"
            android:background="@drawable/uparrow"/>

        <ImageButton
            android:layout_marginLeft="50dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/xv_MotorCDown"
            android:background="@drawable/downarrow"/>
    </TableRow>
</TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/xv_MotorCpowertext"
        android:id="@+id/xv_MotorCpowertext"
        android:layout_below="@+id/tableLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"/>

        <SeekBar
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/xv_MotorCseekBar"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="125dp"
        android:max="100" />



</RelativeLayout>